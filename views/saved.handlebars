    <div id="wrapper">
        <div id="articles">
            <ul>
                {{#each Article mode="prepend"}} {{#if saved}}
                <div class="card" style="width: 60rem;">
                    <div class="card-title">
                        <a style="font-size:25px" href={{this.link}}>{{this.title}}</a>
                        <form action="/articles/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="saved" value="true" id="saveArticle">
                            <button class="btn btn-primary" style="float:right; margin-right:20px" type="submit">Save Article</button>

                        </form>
                    </div>
                    <div class="card-body">
                        <div class="card-text">
                            <p>{{this.summary}}</p>
                        </div>

                        <div class="card-footer">
                            <button class='btn btn-info add' data-id={{this.id}} id="notesclick">Add Note</button>
                            <div id="notes"></div>
                        </div>
                    </div>
                    {{/if}} {{/each}}
            </ul>

            </div>
        </div>
        {{!--
        <div id="notes"></div> --}}
    </div>


    <!-- Modal -->
    <div class="modal fade" id="scrapecomplete myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Scrape</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Scrape is complete!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
