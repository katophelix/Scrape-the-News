<div id="wrapper">
    <div id="articles">
        <ul>
 {{#each Article}} {{#unless saved}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href={{this.link}}>{{this.title}}</a>
                    <form action="/articles/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="saved" value="true" id="saveArticle">
                        <button class="btn btn-success" type="submit">Save Article</button>
                        
                    </form>
                </div>
                <div class="panel-body"><p>{{this.summary}}</p></div>
            </div>
            {{/unless}} {{/each}}
        </ul>
    </div>
    <div id="notes"></div>
</div>
<!-- Modal -->
<div class="modal fade" id="scrapecomplete myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Scrape</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Scrape is complete!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>